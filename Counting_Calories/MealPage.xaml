<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counting_Calories.MealPage"
             xmlns:local="clr-namespace:Counting_Calories"
             Title="Приём пищи"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">

        <!-- Поиск + кнопка избранного -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <SearchBar Grid.Row="0" Grid.Column="0"
                       x:Name="searchBar"
                       Placeholder="Поиск еды..."
                       TextChanged="OnSearchTextChanged"
                       BackgroundColor="{DynamicResource EntryBackgroundColor}"
                       TextColor="{DynamicResource TextColor}"
                       PlaceholderColor="Gray"
                       FontSize="16"/>

            <Button Grid.Row="0" Grid.Column="1"
                    Text="⭐"
                    Clicked="OnFavoritesClicked"
                    WidthRequest="50"
                    HorizontalOptions="End"/>

            <ListView Grid.Row="1" Grid.ColumnSpan="2"
                      x:Name="foodListView"
                      HeightRequest="250"
                      ItemSelected="OnFoodItemSelected"
                      BackgroundColor="{DynamicResource SectionBackgroundColor}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="*,Auto"
                                  Padding="10">
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="{DynamicResource TextColor}" />
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding Calories, StringFormat='Ккал: {0:F1}'}"
                                               TextColor="Gray"
                                               FontSize="12"/>
                                        <Label Text="{Binding Protein, StringFormat='Белки: {0:F1} г'}"
                                               TextColor="Green"
                                               FontSize="12"/>
                                        <Label Text="{Binding Fats, StringFormat='Жиры: {0:F1} г'}"
                                               TextColor="#D4AF37"
                                               FontSize="12"/>
                                        <Label Text="{Binding Carbs, StringFormat='Углеводы: {0:F1} г'}"
                                               TextColor="Tomato"
                                               FontSize="12"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Button Grid.Column="1"
                                        Text="⭐"
                                        BackgroundColor="Transparent"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnAddToFavoritesClicked"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Прокручиваемая часть: инфо и выбранные -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">

                <!-- Информация о калориях -->
                <Frame BackgroundColor="{DynamicResource SectionBackgroundColor}"
                       CornerRadius="16"
                       HasShadow="True"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="caloriesLabel" Text="Ккал: 0"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label x:Name="proteinLabel" Text="Белки: 0 г"
                               FontSize="14"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label x:Name="fatsLabel" Text="Жиры: 0 г"
                               FontSize="14"
                               TextColor="{DynamicResource TextColor}"/>
                        <Label x:Name="carbsLabel" Text="Углеводы: 0 г"
                               FontSize="14"
                               TextColor="{DynamicResource TextColor}"/>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="⏬ Показать выбранное"
                        Clicked="OnShowSelectedClicked"
                        BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                        TextColor="{DynamicResource ButtonTextColor}"
                        CornerRadius="10"
                        Margin="0,10"/>

                <!-- Выбранные продукты -->
                <StackLayout x:Name="selectedItemsSection"
                             IsVisible="False"
                             Spacing="10"
                             BackgroundColor="{DynamicResource SectionBackgroundColor}"
                             Padding="10">
                    <Label Text="Выбранные продукты:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="{DynamicResource TextColor}" />

                    <ListView x:Name="selectedItemsListView"
                              HasUnevenRows="True"
                              BackgroundColor="{DynamicResource SectionBackgroundColor}"
                              HeightRequest="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <HorizontalStackLayout Padding="10" Spacing="10">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource TextColor}" />
                                            <Label Text="{Binding Calories, StringFormat='Ккал: {0:F1}'}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>
                                        <Button Text="❌"
                                                TextColor="Red"
                                                BackgroundColor="Transparent"
                                                CommandParameter="{Binding .}"
                                                Clicked="OnDeleteItemClicked"/>
                                    </HorizontalStackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопки внизу -->
        <HorizontalStackLayout Grid.Row="2"
                               HorizontalOptions="Center"
                               Spacing="20">
            <Button Text="Сбросить"
                    Clicked="OnResetClicked"
                    BackgroundColor="LightCoral"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="140"/>
            <Button Text="Сохранить результат"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="180"/>
        </HorizontalStackLayout>

        <!-- Всплывающее окно избранного -->
        <local:FavoritesPopup x:Name="favoritesPopup"
                              IsVisible="False"
                              AddToMeal="OnAddFromFavorites"
                              Grid.RowSpan="3"
                              BackgroundColor="#80000000" />
    </Grid>
</ContentPage>
